@model WebModels.Models.Class

<div>
    @using (Html.BeginForm("Create", "Class", FormMethod.Post, new { @id = "studentForm"}))
    {
        @Html.HiddenFor(x=>x.ClassId)
        <div class="form-group">
            <label class="col-sm-2 control-label">First Name</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.ClassName, new { id = "className", @class = "form-control", @required = "true" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">Location</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.ClassLocation, new { id = "classLocation", @class = "form-control", @required = "true" })
            </div>
        </div>

        <div>
            <button type="submit">Save</button>
            <button type="reset"><a class="nav-link" asp-controller="Student" asp-action="Index">Cancel</a></button>
        </div>
    }
</div>
