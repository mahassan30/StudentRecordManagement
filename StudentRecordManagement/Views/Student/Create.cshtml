@model Student

<div>
    @using (Html.BeginForm("Create", "Student", FormMethod.Post, new { @id = "studentForm"}))
    {
        <div class="form-group">
            <label class="col-sm-2 control-label">First Name</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.FirstName, new { id = "sFirstName", @class = "form-control", @required = "true" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">Middle Name</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.MiddleName, new { id = "sMidName", @class = "form-control", @required = "true" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">Last Name</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.LastName, new { id = "sLastName", @class = "form-control", @required = "true" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">Phone</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Phone, new { id = "sLastName", @class = "form-control", @required = "true" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">Address</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Address, new { id = "sLastName", @class = "form-control", @required = "true" })
            </div>
        </div>

@*        <div class="form-group">
            <label class="col-sm-2 control-label">Class</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.ClassName, new { id = "sLastName", @class = "form-control", @required = "true" })
            </div>
        </div>*@

        <div>
            <button type="submit">Save</button>
            <button type="reset"><a class="nav-link" asp-controller="Student" asp-action="Index">Cancel</a></button>
        </div>
    }
</div>
