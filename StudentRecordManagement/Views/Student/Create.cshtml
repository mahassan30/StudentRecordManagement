@model StudentRecordManagement.ViewModels.Student.CreateStudentViewModel

<div>
    @using (Html.BeginForm("Create", "Student", FormMethod.Post, new { @id = "studentForm"}))
    {
        @Html.HiddenFor(x=>x.Student.StudentId)
        <div class="form-group">
            <label class="col-sm-2 control-label">First Name</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Student.FirstName, new { id = "sFirstName", @class = "form-control", @required = "true" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">Middle Name</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Student.MiddleName, new { id = "sMidName", @class = "form-control", @required = "true" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">Last Name</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Student.LastName, new { id = "sLastName", @class = "form-control", @required = "true" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">Phone</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Student.Phone, new { id = "sLastName", @class = "form-control", @required = "true" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">Address</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Student.Address, new { id = "sLastName", @class = "form-control", @required = "true" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">Class</label>
            <div class="col-sm-10">
                @Html.DropDownListFor(x=>x.Student.ClassId, new SelectList(Model.Classes, "ClassId", "ClassName"), new {@class = "form-control"})
            </div>
        </div>

        <div>
            <button type="submit">Save</button>
            <button type="reset"><a class="nav-link" asp-controller="Student" asp-action="Index">Cancel</a></button>
        </div>
    }
</div>
